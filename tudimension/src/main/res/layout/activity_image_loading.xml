<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_loading"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_image_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/ic_trans_background"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            >
            <ImageView
                android:id="@+id/iv_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_img_back"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_image_loading"
                android:layout_toRightOf="@id/iv_image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:text="123"/>
            <ImageView
                android:id="@+id/iv_image_save"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_img_save"
                />
            <ImageView
                android:id="@+id/iv_img_share"
                android:layout_toLeftOf="@id/iv_image_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_img_share"
                android:layout_centerInParent="true"
                android:padding="10dp"

                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/iv_img_comment"
                android:layout_toLeftOf="@id/iv_img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_img_comment"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:visibility="invisible"

                android:layout_marginRight="5dp"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
