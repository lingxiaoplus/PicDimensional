<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/len_20"
            android:layout_margin="@dimen/len_6"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e3e4"
            android:layout_margin="@dimen/len_4"
            />
        <TextView
            android:id="@+id/tv_pop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_16"
            android:textColor="@color/black_alpha_208"
            android:layout_margin="@dimen/len_4"
            android:text="名称："/>
        <TextView
            android:id="@+id/tv_pop_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_16"
            android:textColor="@color/black_alpha_208"
            android:layout_margin="@dimen/len_4"
            android:text="时间："/>
        <TextView
            android:id="@+id/tv_pop_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_16"
            android:textColor="@color/black_alpha_208"
            android:layout_margin="@dimen/len_4"
            android:text="文件大小："/>
        <TextView
            android:id="@+id/tv_pop_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_16"
            android:textColor="@color/black_alpha_208"
            android:layout_margin="@dimen/len_4"
            android:text="路径："/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e3e4"
            android:layout_margin="@dimen/len_4"
            />
        <TextView
            android:id="@+id/tv_pop_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/len_20"
            android:padding="@dimen/len_6"
            android:background="@drawable/pop_bottom_text"
            android:text="关闭"/>
    </LinearLayout>
</android.support.v7.widget.CardView>