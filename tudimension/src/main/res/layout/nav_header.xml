<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_head_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_head_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:placeholderImage="@drawable/last"
        fresco:placeholderImageScaleType="focusCrop"/>

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/header_size"
        android:layout_height="@dimen/header_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_hitokoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/description_head"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_hitokoto"
        android:layout_marginLeft="5dp"
        android:text="未登陆"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        android:textSize="16sp" />
</RelativeLayout>