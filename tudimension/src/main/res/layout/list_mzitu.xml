<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_mzitu_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mzitu_detail_height"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarImage="@drawable/ic_img_default"
            fresco:failureImage="@drawable/ic_failure"
            fresco:failureImageScaleType="centerInside"
            fresco:fadeDuration="1000"
            />
        <TextView
            android:id="@+id/tv_mzitu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:text="2343245"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_margin="5dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>