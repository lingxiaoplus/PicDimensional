<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/cardStyle"
                android:layout_marginTop="8dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="常规"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="16sp" />

                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="WIFI情况下自动检测更新"
                        app:switchcompat="true"
                        app:title="检查更新"></com.lingxiaosuse.picture.tudimension.widget.SettingCardView>

                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_daly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="开启启动页每日图片"
                        app:switchcompat="true"
                        app:title="启动页面图片">
                    </com.lingxiaosuse.picture.tudimension.widget.SettingCardView>

                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_cache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="当前缓存的大小为：0MB"
                        app:visable="false"
                        app:title="清理缓存"></com.lingxiaosuse.picture.tudimension.widget.SettingCardView>
                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="侧滑模块显示与隐藏"
                        app:visable="false"
                        app:title="选择侧滑模块"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/cardStyle"
                android:layout_marginTop="8dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="其他"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="16sp" />

                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="把妹子们分享出去"
                        app:visable="false"
                        app:title="分享给好友"></com.lingxiaosuse.picture.tudimension.widget.SettingCardView>

                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_skin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="更换皮肤"
                        app:visable="false"
                        app:title="换肤">
                    </com.lingxiaosuse.picture.tudimension.widget.SettingCardView>
                    <com.lingxiaosuse.picture.tudimension.widget.SettingCardView
                        android:id="@+id/card_comparse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:message="显示720p图片"
                        app:visable="false"
                        app:title="浏览图片质量"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
